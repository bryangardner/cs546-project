<div class="row">
    <div class="col-sm-12 col-md-6">
        <h2>{{ pageTitle }}</h2>
        {{#if itemsArray}}
        	{{#each itemsArray}}
        		{{> item_item }}
        	{{/each}}
        {{else if itemProfile}}
            <img src="{{itemProfile.imagePath}}" alt="{{itemProfile.name}} photo" class="itemImage">
        	<p>Posted by <a href="/users/username/{{itemProfile.userProfile.username}}">{{itemProfile.userProfile.username}}</a></p>
            <p>Categories:
                {{#each itemProfile.categories}}
                    <a href="/items/categories/{{this}}">{{this}}</a>,
                {{/each}}
            </p>
            <p>
                Minimum Days: {{itemProfile.time.minDays}} </p>
            <p> Maximum Days: {{itemProfile.time.maxDays}} </p>
            <p> Zip Code: <a href="/items/zip/{{itemProfile.zip}}">{{itemProfile.zip }}</a> </p>
            <p>
                Status: {{itemProfile.status}}
            </p>
            <p>
                Price: ${{itemProfile.price}}</p>
            <p>
                Payment Method: {{itemProfile.paymentMethod}}
            </p>
            <p>Description: {{itemProfile.description}}</p>
            <!-- <p>ID: {{itemProfile._id}}</p> -->
            {{#if itemProfile.rentals}}
                <h3>Rented by:</h3>
                {{#each itemProfile.rentals}}
                    <p>{{this.userProfile.username}}, Time Period: {{this.start}} to {{this.end}}</p>
                {{/each}}
            {{/if}}
        	<br>
        	<input type="button" onclick="location.href='/items';" value="List of All Items" />
            <input type="button" onclick="location.href='/items/{{itemProfile._id}}/rent';" value="I Want to Rent This!" />
        {{else}}
            <h3 style="color: red";> Sorry, no results found. </h3>
        {{/if}}
        {{#if button}}
            <br>
            <input type="button" onclick="location.href='/items';" value="List of All Items" />
        {{/if}}
        {{#if error}}
            <h4 style="color: red";>{{ error }} </h4>
        {{/if}}
    </div>
</div>

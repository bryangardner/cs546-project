<div class="advancedSearchDisplay">
<h1 class="page-header">User Search</h1>
{{#if error }}
<div class="form-group">
  <div class="alert alert-danger">
    {{ error }}
  </div>
</div>
{{/if}}
<form method="post" action="/users/search">
   <div class="form-group">
    <label for="username">Find by Username</label>
    <input type="text" class="form-control" placeholder="Username" value= "{{username}}" name="username" id="username">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
<br>
<form method="post" action="/users/search">
   <div class="form-group">
    <label for="email">Find by Email</label>
    <input type="text" class="form-control" placeholder="Email" value= "{{email}}" name="email" id="email">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>

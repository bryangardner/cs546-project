<h2>{{pageTitle}}</h2>
<br>

<div class="row">
  <div class="col-sm-12">
    <form class="form" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Item Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{name}}">
      </div>
      <div class="form-group">
        <label for="categories">Categories</label>
        <input type="text" class="form-control" id="categories" name="categories" value="{{categories}}">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="description" name="description" value="{{description}}">
      </div>
      <div class="form-group">
        <label for="photo">Photo</label>
        <input type="file" accept="image/*" name="itemImage">
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" id="price" name="price" value="{{price}}">
      </div>
      <div class="form-group">
        <label for="paymentMethod">Payment Method</label>
        <input type="text" class="form-control" id="paymentMethod" name="paymentMethod" value="{{payment}}">
      </div>
      <div class="form-group">
        <label for="zip">Zip Code</label>
        <input type="text" pattern="[0-9]{5}" class="form-control" id="zip" name="zip" value="{{zip}}">
      </div>
      <div class="form-group">
        <label for="minDays">Minimum Days item must be lent out</label>
        <input type="number" class="form-control" id="minDays" name="minDays" value="{{minDays}}">
      </div>
      <div class="form-group">
        <label for="maxDays">Maximum Days item must be lent out</label>
        <input type="number" class="form-control" id="maxDays" name="maxDays" value="{{maxDays}}">
      </div>
      {{#if error }}
      <div class="form-group">
        <div class="alert alert-danger">
          {{ error }}
        </div>
      </div>
      {{/if}}
      <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </form>
  </div>
</div>

<div class="editAccountDisplay">
    <div class="row">
        <div class="col-sm-12">
            <h1>{{ pageTitle }}</h1>
            <form class="form" method="post" action="/account/edit">
                <div class="form-group">
                    <label for="username">Username (cannot be changed)</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{profile.username}}" placeholder="{{profile.username}}"
                        readonly>
                </div>
                <div class="form-group">
                    <label for="idNum">ID (cannot be changed)</label>
                    <input type="text" class="form-control" id="idNum" name="idNum" value="{{profile._id}}" placeholder="{{profile._id}}" readonly>
                </div>
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" id="firstName" name="newFirstName" value="{{profile.firstName}}" placeholder="First Name">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" id="lastName" name="newLastName" value="{{profile.lastName}}" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control" id="email" name="newEmail" value="{{profile.email}}" placeholder="Email Address">
                </div>
                <div class="form-group">
                    <label for="phoneNum">Phone Number</label>
                    <input type="tel" pattern="^\d{3}-\d{3}-\d{4}$" required class="form-control" id="phoneNum" name="newPhoneNum" value="{{profile.phone}}"
                        placeholder="###-###-####">
                </div>
                <div class="form-group">
                    <label for="zipCode">5-Digit Zip Code</label>
                    <input type="text" pattern="[0-9]{5}" class="form-control" id="zipCode" name="newZipCode" value="{{profile.zip}}" placeholder="#####">
                </div>
                {{#if error }}
                <div class="form-group">
                    <div class="alert alert-danger">
                        {{ error }}
                    </div>
                </div>
                {{/if}}
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Update</button>
                </div>
            </form>
            <form class="form" id="deleteAccount">
                <input type="hidden" name="userId" id="userId" value="{{userId}}">
                <div class="form-group">
                    <button type="submit" class="btn btn-danger1">Delete Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

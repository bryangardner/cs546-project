<div class="advancedSearchDisplay">
<h1 class="page-header">Advanced Search</h1>
<form method="post" action="/items/advanced">
   <div class="form-group">
    <label>Keywords</label>
    <input type="text" class="form-control" placeholder="Keywords" name="keywords">
  </div>
  <div class="form-group">
    <label>Category</label>
    <input type="text" class="form-control" placeholder="Category" name="category">
  </div>
   <div class="form-group">
    <label>Price Range</label>
    <input type="text" class="form-control" placeholder="Min Price" name="minPrice">
    <input type="text" class="form-control" placeholder="Max Price" name="maxPrice">
  </div>
  <div class="form-group">
    <label>Payment Method</label>
    <input type="text" class="form-control" placeholder="Payment Method" name="paymentmethod">
  </div>
  <div class="form-group">
    <label>Zip Code</label>
    <input type="text" class="form-control" placeholder="Zip Code" name="zipcode">
  </div>
  <div class="form-group">
    <label>Minimum Borrow Time (in Days)</label>
    <input type="text" class="form-control" placeholder="Num Days" name="time">
  </div>
  <div class="form-group">
    <label>Availability Status</label>
    <input type="text" class="form-control" placeholder="Availability" name="availability">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>
